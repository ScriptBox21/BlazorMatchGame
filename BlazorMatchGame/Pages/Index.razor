@page "/"
@inherits IndexComponentBase
@using System.Timers

<style>
    .container {
        width: 400px;
    }

    button {
        width: 100px;
        height: 100px;
        font-size: 50px;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var animal in ShuffledAnimals)
        {
            <div class="col-md-3">
                <button @onclick="@(() => ButtonClick(animal))" type="button" class="btn btn-outline-dark">@animal</button>
            </div>
        }
    </div>
    <h2>Matches found: @matchesFound</h2>
    <h3>Time: @timeDisplay</h3>
</div>